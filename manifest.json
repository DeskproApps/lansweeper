    },
    "client_secret": {
      "title": "Client Secret",
      "type": "string",
      "isRequired": true,
      "isBackendOnly": true,
      "order": 20,
      "default": "uCP1h3W4fL_ckPOPLUOySXFi1xUmq3xrdxU5XgfFhOWKfrEb8aHHhSqZt74TwbE0"
    },
    "callback_url": {
      "title": "Callback URL",
      "type": "app_embedded",
      "options": {
        "entrypoint": "https://8f77d6780990.ngrok.app/#/admin/callback",
        "height": 75
      },
      "isRequired": false,
      "isBackendOnly": true,
      "order": 30
    },
    "global_access_token": {
      "title": "",
      "default": "",
      "type": "app_embedded",
      "options": {
        "entrypoint": "https://8f77d6780990.ngrok.app/#/admin/global-sign-in",
        "height": 100
      },
      "isRequired": true,
      "isBackendOnly": true,
      "order": 40
    }
  },
  "proxy": {
    "whitelist": [
      {
        "url": "https://api.lansweeper.com/api/*",
        "methods": ["POST"],
        "timeout": 20
      }
    ]
  }
